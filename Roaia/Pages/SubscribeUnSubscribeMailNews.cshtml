@page "/SubscribeUnSubscribeMailNews"
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    https://localhost:44363/SubscribeUnSubscribeMailNews?email=shehabwael@std.mans.edu.eg
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Newsletter Subscription</title>
    <link rel="shortcut icon" sizes="200x200" href="https://res.cloudinary.com/shehablotfallah/image/upload/v1721196852/Picsart_24-07-13_19-46-47-363_hdxep6.png">
    <!-- Bootstrap 5.3.3 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- Nunito Font -->
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Nunito', sans-serif;
        }

        .custom-header {
            background-color: var(--header-background-color, #0d6efd);
            color: var(--header-text-color, white);
            text-align: center;
        }

        .custom-body {
            background-color: var(--body-background-color, #f0f0f0);
            padding: 20px;
        }

        .btn-dark-mode {
            position: absolute;
            top: 20px;
            right: 20px;
        }

        .custom-alert {
            background-color: var(--alert-background-color, #d4edda);
            color: var(--alert-text-color, #155724);
            border-color: var(--alert-border-color, #c3e6cb);
        }
    </style>
</head>
<body>
    <form id="subscriptionForm" action="/api/Auth/SubscribeUnSubscribeMailNews/@Request.Query["Email"]" method="post">
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card">
                        <div class="custom-header">
                            <img src="https://res.cloudinary.com/shehablotfallah/image/upload/v1707189439/fghgjdtyjrghrhstyby.png" alt="Logo" style="max-width: 150px;">
                            <h3>Newsletter Subscription</h3>
                        </div>
                        <div class="custom-body">
                            <p id="subscriptionStatus">You are currently subscribed. Click the button to unsubscribe.</p>
                            <button type="button" id="toggleButton" class="btn btn-success">Unsubscribe</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <!-- Bootstrap 5.3.3 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {
            $('#toggleButton').click(function () {
                var button = $(this);
                var isSubscribed = button.hasClass('btn-success');

                $.ajax({
                    type: 'POST',
                    url: $('#subscriptionForm').attr('action'),
                    success: function (response) {
                        isSubscribed = !isSubscribed;
                        updateButtonUI(isSubscribed);
                        showAlert(response.message, response.type);
                    },
                    error: function (error) {
                        console.log('Error:', error);
                    }
                });
            });

            function updateButtonUI(isSubscribed) {
                var button = $('#toggleButton');
                var statusText = $('#subscriptionStatus');

                if (isSubscribed) {
                    button.text('Subscribe');
                    button.removeClass('btn-success').addClass('btn-primary');
                    statusText.text('You are currently unsubscribed. Click the button to subscribe.');
                } else {
                    button.text('Unsubscribe');
                    button.removeClass('btn-primary').addClass('btn-success');
                    statusText.text('You are currently subscribed. Click the button to unsubscribe.');
                }
            }

            function showAlert(message, type) {
                const alertClass = type === 'success' ? 'alert-success' : 'alert-info';
                const alert = $('<div class="alert ' + alertClass + ' alert-dismissible fade show custom-alert" role="alert">' +
                    message +
                    '<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>' +
                    '</div>');
                $('.custom-body').prepend(alert);

                setTimeout(function () {
                    alert.alert('close');
                }, 3000);
            }
        });
    </script>
</body>
</html>